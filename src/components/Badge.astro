---
interface Props {
  class?: string;
  color?: 'orange' | 'blue' | 'green' | 'pink' | 'purple' | 'yellow';
  rotate?: number;
}

const {
  class: className = '',
  color = 'orange',
  rotate = -10
} = Astro.props;

const colorClasses = {
  orange: 'bg-orange-400',
  blue: 'bg-blue-400',
  green: 'bg-green-400',
  pink: 'bg-pink-400',
  purple: 'bg-purple-400',
  yellow: 'bg-yellow-400'
};
---

<div
  class:list={[
    'neo-card p-3 rounded-lg font-bold',
    colorClasses[color],
    className
  ]}
  style={`transform: rotate(${rotate}deg);`}
>
  <slot />
</div>
